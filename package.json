{
  "name": "holded-bot",
  "private": true,
  "version": "1.0.0",
  "description": "Holded bot from terminal",
  "author": "Gabriel GarcÃ­a Seco <ggarciaseco@gmail.com>",
  "keywords": [
    "typescript",
    "cli",
    "starter"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "lint": "eslint --ext .ts src",
    "clean": "rimraf ./dist/ ./exec/",
    "build": "npm run clean && tsc",
    "test": "npm run build && ava --verbose",
    "bundle": "npm run build && pkg . --out-dir ./exec/"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "ava": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "2.0.2",
    "pkg": "^4.4.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "luxon": "^1.22.2",
    "puppeteer": "^2.1.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
